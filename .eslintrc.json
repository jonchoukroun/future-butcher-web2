{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2020,
        "ecmaFeatures": {
            "jsx": true
        },
        "lib": ["es2018", "DOM"],
        "project": "./tsconfig.json"
    },
    "extends": [
        "plugin:react/recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier/@typescript-eslint",
        "plugin:prettier/recommended"
    ],
    "env": {
        "browser": true,
        "es2021": true
    },
    "rules": {
        "no-console": "warn",
        "no-undefined": "error"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
